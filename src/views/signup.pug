extends ./base.pug
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/")
      img#logo(src="/assets/img/admiral.png", alt="logo")
      h1#title Admiralty
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/register") Register
  section#signup
    form#signupForm(class="mainForm", name="signupForm", action="/register", method="POST")
      label(for="username") Username:
      input#user(type="text", name="username", placeholder="username")
      label(for="pass") Password:
      input#pass(type="password", name="pass", placeholder="password")
      label(for="pass2") Password:
      input#pass2(type="password", name="pass2", placeholder="retype password")
      input#csrf(type="hidden", name="_csrf", value="" + csrfToken)
    h3#error
      span#errorMessage
    a#signupSubmit(class="formSubmit", href="#") Register
block scripts
        script(src="/assets/client.js")
